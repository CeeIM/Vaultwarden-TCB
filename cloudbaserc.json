{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "vaultwarden",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "vaultwarden",
          "servicePath": "/",
          "localPath": "./",
          "uploadType": "package",
          "containerPort": 80,
          "envVariables": {
            "WEBSOCKET_ENABLED": "false",
            "ENABLE_DB_WAL": "false",
            "DB_NAME": "bitwarden",
            "DATABASE_URL": "mysql://{{env.DB_USER}}:{{env.DB_PASS}}@{{env.DB_HOST}}:{{env.DB_PORT}}/vaultwarden"
          },
          "volumeMounts": {
            "/data": "vaultwarden-cfs"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CFS",
          "name": "vaultwarden-cfs"
        },
        {
          "type": "CynosDB",
          "name": "vaultwarden",
          "envMap": {
            "IP": "DB_HOST",
            "PORT": "DB_PORT",
            "USERNAME": "DB_USER",
            "PASSWORD": "DB_PASS"
          }
        }
      ]
    }
  }
}
